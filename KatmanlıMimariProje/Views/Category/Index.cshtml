@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Kategoriler</h1>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="@Url.Action("DeleteCategory","Category",new { item.Id })" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="@Url.Action("UpdateCategory","Category",new { id = item.Id })" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

