@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürün Ekleme İşlemleri</h1>
@using (Html.BeginForm("AddProduct1", "Product", FormMethod.Post))
{
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Ürün Fiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Price)
    <br />
    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br />
    @Html.Label("Ürün Kategori")
    @Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.v1, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.CategoryId)
    <br />
    <button class="btn-primary">Ürün Ekle</button>
}

