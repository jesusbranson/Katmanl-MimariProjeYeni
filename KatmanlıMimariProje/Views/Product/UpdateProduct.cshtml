@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<h1>Ürün Güncelleme İşlemleri</h1>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control",@required = "", type = "hidden"})
    @Html.ValidationMessageFor(x => x.Id)
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Ürün Fiyat")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Price)
    <br />
    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @required = "" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br />
    <button class="btn-primary">Ürün Güncelle</button>
}

