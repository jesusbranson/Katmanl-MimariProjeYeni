@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürünler</h1>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Category.Name</td>
            <td><a href="@Url.Action("DeleteProduct","Product",new { item.Id })" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="@Url.Action("UpdateProduct","Product",new { id = item.Id })" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="@Url.Action("SaleProduct","Sale",  new {id = item.Id })" class="btn btn-outline-success">Satış</a></td>
        </tr>
    }
</table>


